<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FAFAFA"
    android:fitsSystemWindows="true">

    <!-- Modern Header -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:paddingTop="48dp"
        android:background="#FFFFFF"
        android:elevation="2dp"
        android:gravity="center_vertical">

        <ImageView
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/ic_arrow_back"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:padding="8dp"
            android:clickable="true"
            android:focusable="true"
            android:onClick="onBackClick"
            android:tint="#1A1A1A" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="College Tracker"
            android:textSize="22sp"
            android:textStyle="bold"
            android:textColor="#1A1A1A"
            android:layout_marginStart="12dp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="#F0F0F0"
            android:padding="8dp"
            android:layout_marginEnd="4dp"
            android:gravity="center_vertical">

            <View
                android:layout_width="8dp"
                android:layout_height="8dp"
                android:background="#4CAF50"
                android:layout_marginEnd="6dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="4 Features"
                android:textSize="12sp"
                android:textColor="#666666" />
        </LinearLayout>
    </LinearLayout>

    <!-- Chat Container -->
    <ScrollView
        android:id="@+id/scroll_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:fillViewport="true"
        android:background="#FAFAFA">

        <LinearLayout
            android:id="@+id/answers_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp" />
    </ScrollView>

    <!-- Question Display -->
    <TextView
        android:id="@+id/tv_question"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:padding="16dp"
        android:background="#E3F2FD"
        android:textColor="#1976D2"
        android:textSize="16sp"
        android:textStyle="bold"
        android:visibility="gone" />

    <!-- Modern Input Section -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#FFFFFF"
        android:elevation="8dp"
        android:padding="16dp">

        <!-- AI Models Indicator -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="12dp"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tracking Features:"
                android:textSize="12sp"
                android:textColor="#666666"
                android:layout_marginEnd="8dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Location"
                android:textSize="11sp"
                android:textColor="#FFFFFF"
                android:background="#10A37F"
                android:paddingHorizontal="8dp"
                android:paddingVertical="2dp"
                android:layout_marginEnd="4dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Distance"
                android:textSize="11sp"
                android:textColor="#FFFFFF"
                android:background="#4285F4"
                android:paddingHorizontal="8dp"
                android:paddingVertical="2dp"
                android:layout_marginEnd="4dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ETA"
                android:textSize="11sp"
                android:textColor="#FFFFFF"
                android:background="#8E24AA"
                android:paddingHorizontal="8dp"
                android:paddingVertical="2dp"
                android:layout_marginEnd="4dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Route"
                android:textSize="11sp"
                android:textColor="#FFFFFF"
                android:background="#000000"
                android:paddingHorizontal="8dp"
                android:paddingVertical="2dp" />
        </LinearLayout>

        <!-- Input Container -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="#F5F5F5"
            android:padding="4dp"
            android:gravity="center_vertical">

            <EditText
                android:id="@+id/et_question"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="Where is my college? Track location and activities..."
                android:minHeight="48dp"
                android:maxHeight="120dp"
                android:background="@android:color/transparent"
                android:padding="12dp"
                android:textSize="16sp"
                android:textColor="#1A1A1A"
                android:textColorHint="#999999"
                android:inputType="textCapSentences|textMultiLine"
                android:scrollbars="vertical" />

            <Button
                android:id="@+id/btn_ask_all_ais"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:text="â†’"
                android:textSize="20sp"
                android:textStyle="bold"
                android:background="#1A1A1A"
                android:textColor="#FFFFFF"
                android:layout_margin="4dp" />
        </LinearLayout>

        <!-- Progress Bar -->
        <ProgressBar
            android:id="@+id/progress_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:visibility="gone"
            android:indeterminateTint="#1A1A1A" />
    </LinearLayout>

</LinearLayout>
