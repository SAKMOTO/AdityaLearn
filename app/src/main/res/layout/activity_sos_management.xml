<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="#F5F5F5">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="SOS Emergency Settings"
        android:textSize="24sp"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_marginBottom="24dp"
        android:textColor="#FF0000"/>

    <TextView
        android:id="@+id/contacts_count"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Emergency Contacts: 0/5"
        android:textSize="16sp"
        android:gravity="center"
        android:layout_marginBottom="16dp"/>

    <Button
        android:id="@+id/add_contact_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Add Emergency Contact"
        android:backgroundTint="#FF0000"
        android:textColor="#FFFFFF"
        android:layout_marginBottom="8dp"/>

    <Button
        android:id="@+id/view_contacts_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="View Emergency Contacts"
        android:backgroundTint="#4CAF50"
        android:textColor="#FFFFFF"
        android:layout_marginBottom="8dp"/>

    <Button
        android:id="@+id/test_sos_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Test SOS (No Messages)"
        android:backgroundTint="#2196F3"
        android:textColor="#FFFFFF"
        android:layout_marginBottom="16dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Shake phone 3 times to trigger SOS emergency"
        android:textSize="14sp"
        android:gravity="center"
        android:textColor="#666666"/>

</LinearLayout>